<%-include("partials/header.ejs")%>
<div class="header">
<h3><%=emailid%></h3>
<a class="btn btn-primary btn-lg" href="/" role="button">LogOut</a>
</div>
<div class="manager-page">

  <div class="manage">

  <h1 style="font-size:5vw ; color:#d63447;">Add Expenditures</h1>




  <form class="new-expenditure" action="/manager" method="post">
    <table>
      <tr>
      <input style="width:200px;display:inline-block" class="form-control" type="date" name="date" placeholder="Enter Date" value="">
      </tr>
      <tr>
        <input style="width:200px;display:inline-block" class="form-control" type="value" name="expenditure_amt" placeholder="Enter Amount" value="">
      </tr>
      <tr>
  <input  style="width:500px;display:inline-block" class="form-control" type="text" name="reason" placeholder="Reason to Spend" value="">
      </tr>
    </table>



  <button  style="margin:20px;background-color:#fa744f;" class="btn btn"  type="submit" name="button" value="<%=emailid%>">Add Expenditure</button>
  </form>

  </div>




  <div class="display-expenditure">
    <h3 style="color:#400082 ">Total Expenditure : â‚¹ <%=total_amount%></h3>
    <table style="background-color:white;align:center">
    <tr>
       <th>Date</th><th>Amount</th><th>Reason</th>
    </tr>
      <% expenditures.forEach(function(expenditure){%>



          <tr>
          <td><%=expenditure.date %></td>
          <td><%=expenditure.amount %></td>
          <td><%=expenditure.reason %></td>
          <td><input type="checkbox" name="dustbin"  ></td>
          </tr>





      <%  })%>

    </table>

  </div>

</div>



<%-include("partials/footer.ejs")%>
